<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to(image_tag("header_logo.png", :alt => ""), root_url, id: 'logo') %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.notification == true %>
            <li class="new_notification header-link">
          <% else %>
            <li class="no_notification header-link">
          <% end %>
          <%= link_to notifications_path do %><span><i class="fas fa-bell"></i> 通知</span><% end %>
          </li>
          <li>
          <%= link_to favorites_path do %><span><i class="fa fa-heart"> お気に入り</i></span><% end %>
          </li>
          <li><%= link_to 'ユーザー一覧', users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to 'プロフィール', current_user %></li>
              <li class="divider"></li>
              <li><%= link_to 'ログアウト', logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <%#<li><%= link_to 'FindAppsとは？', about_path %><%#</li>%>
          <li><%= link_to 'ユーザー登録(無料)', signup_path %></li>
          <li><%= link_to 'ログイン', login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>