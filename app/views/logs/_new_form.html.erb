<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :app_id, @app.id %>
  <p class="add-log"><i class="fas fa-laptop-code"></i> 開発ログを追加する</p>
  <div class="row">
    <div class="col-md-8 col-md-offset-1">
      <div class="field">
        <%= f.text_area :content, placeholder: "開発メモ..." %>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit "開発ログの追加", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>