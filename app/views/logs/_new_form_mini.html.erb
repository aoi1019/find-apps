<%= form_for(@log) do |f| %>
  <%= hidden_field_tag :app_id, @app.id %>
  
  <div class="row">
    <div class="col-md-9">
      <div class="field">
        <%= f.text_area :content, placeholder: "開発ログを追加..." %>
      </div>
    </div>
    <div class="col-md-3">
      <%= f.submit "追加", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>