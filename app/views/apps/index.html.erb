<% provide(:title, 'アプリ一覧') %>
<div id="fh5co-portfolio">
  <div class="container">
    <% if @search_word.present? %>
      <h3>”<%= @search_word %>”の検索結果：<%= @apps.count %>件</h3>
    <% else %>
      <h3>アプリ一覧</h3>
    <% end %>
    <ul class="apps">
      <%= render @apps %>
    </ul>
    <%= will_paginate %>
  </div>
</div>