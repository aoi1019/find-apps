<% provide(:title, "アプリ情報の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@app) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <span class="picture">
          <%= f.label :picture %>　<span class="input-unneed">※任意</span>
          <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'app-picture' %>
          <%= image_tag(@app.picture.thumb400.url) if @app.picture.url.present? %>
        </span>
        <div class = 'form-group'>
          <%= f.label :name %>　<span class="input-need">※必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'app_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :description %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'app_description' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :point %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :point, class: 'form-control', id: 'app_point' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :reference %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :reference, class: 'form-control', id: 'app_reference' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :period %> [日]　<span class="input-unneed">※任意</span>
          <%= f.text_field :period, class: 'form-control', id: 'app_period' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <p></p>
        <%= link_to "アプリを削除する", app_path(@app), method: :delete,
                             data: { confirm: "本当にこのアプリを削除してよろしいですか？" } %>
      <% end %>
    </div>
  </div>
</div>