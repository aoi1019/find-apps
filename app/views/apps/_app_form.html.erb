<%= form_with model: @app, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <span class="picture">
    <%= f.label :picture %>　<span class="input-unneed">※任意</span>
    <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'app_picture' %>
  </span>
  <div class = 'form-group'>
    <%= f.label :name %>　<span class="input-need"><b>※必須</b></span>
    <%= f.text_field :name, class: 'form-control', id: 'app_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'app_description' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :point %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :point, size: "30x4", class: 'form-control', id: 'app_point' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :reference %>　<span class="input-need"><b>※必須</b></span>
    <%= f.text_field :reference, class: 'form-control', id: 'app_reference' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :period %> [日]　<span class="input-unneed">※任意</span>
    <%= f.text_field :period, class: 'form-control', id: 'app_period' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary app-submit' %>
<% end %>

<script type="text/javascript">
  $('#dish_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('アップロードできる写真の最大サイズは5MBです。5MB以下の画像を選択してください');
    }
  });
</script>